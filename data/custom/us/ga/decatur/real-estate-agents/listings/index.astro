---
import Default from "../src/astro/components/Default.astro";
import data from "./data.json";
import listingsDetails from "./[id]/data.json"
import PropertyCard from "src/astro/components/PropertyCard.astro";
---

<Default data={data}>
    <div slot="pageCustom">
        <div class="mainContent no-scroll-content" id="main-wrapper">
            <h1>Decatur, GA Investment Properties</h1>
            <div class="text-content scroll-content">
                <div class="listing-container">
                    <div class="listings-grid">
                        {data.listings.map((listing) => {
                            const detail = listingsDetails.listings_details.find(
                                (detail) => detail.id === listing.id
                            );
                            return <PropertyCard listing={listing} detail={detail} key={listing.id} />;
                        })}
                    </div>
                </div>
            </div>
        </div>
    </div>
</Default>
