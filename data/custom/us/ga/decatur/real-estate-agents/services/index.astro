---
import Default from "../src/astro/components/Default.astro";
import data from "./data.json";
---

<Default data={data}>
    <div slot="pageCustom">
        <div class="mainContent no-scroll-content" id="main-wrapper">
            <h1>{data.services_consulting.page_title}</h1>
            <div class="text-content scroll-content">
                {data.services_consulting.services.map(service => (
                    <div class="service-container locni-container">
                        <div class="bottom-line">
                            <h2 class="locni-title">{service.title}</h2>
                            <p class="locni-description">{service.description}</p>
                            <div class="locni-features">
                                <ul>
                                    {service.features.map(feature => (
                                        <li>{feature}</li>
                                    ))}
                                </ul>
                            </div>
                            <a class="btn-primary" href={service.link}>Learn More</a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</Default>
