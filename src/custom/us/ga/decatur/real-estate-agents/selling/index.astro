---
import Default from "../src/astro/components/Default.astro";
import data from "./data.json";
---

<Default data={data}>
    <div slot="pageCustom">
        <div class="mainContent no-scroll-content" id="main-wrapper">
            <h1>{data.selling.title}</h1>
            <div class="text-content scroll-content">
                <div class="selling-container locni-section">
                    <div class="locni-text-bigger-font locni-section-content">
                        {data.selling.description.map(p => (
                            <p>{p}</p>
                        ))}
                        <div class="btn-outline">
                            {data.selling.buttons.map(button => (
                                <a href={button.url}>{button.text}</a>
                            ))}
                        </div>
                    </div>
                    <div class="locni-section-img">
                        <img
                            src={data.selling.image.src}
                            alt={data.selling.image.alt}
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</Default>
